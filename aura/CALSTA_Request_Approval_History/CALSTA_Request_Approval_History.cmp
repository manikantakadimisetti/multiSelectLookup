<aura:component controller="CalSTA_RequestApprovalProcessController" implements="flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickAction" access="global"  >
    <!-- attributes -->        
    <aura:attribute name="recordId" type="Id"/>  
    <aura:attribute name="approvalHistoryList" type="List"/>
    <aura:attribute name="ispopupModalOpen" type="boolean" default="false" />
    <aura:attribute name="approvalsHistoryMap" type="Map"/>    
    <aura:attribute name="showapprovalHistorySubmittedBy" type="string" />
    <aura:attribute name="approvalsMapList" type="List" />       	
    <aura:attribute name="isSpinnerLoading" type="boolean" default="false"/>    
    <aura:handler event="aura:waiting" action="{!c.showSpinner}"/>
    <aura:handler event="aura:doneWaiting" action="{!c.hideSpinner}"/> 
    <aura:handler name="init" value="{!this}" action="{!c.doProcess}"/>
    <aura:handler name="refreshChildComponent" event="c:refreshComponent" action="{!c.refreshChild}" />
    

    <aura:if isTrue="{!v.isSpinnerLoading}">
        <div aura:id="spinnerId" class="slds-spinner_container">
            <div class="slds-spinner--brand  slds-spinner slds-spinner--large slds-is-relative" role="alert">
                <span class="slds-assistive-text">Loading</span>
                <div class="slds-spinner__dot-a"></div>
                <div class="slds-spinner__dot-b"></div>
            </div>
        </div>
    </aura:if>
    
    
    <!-- Approval History Details -->
    
    <lightning:card iconName="standard:user">  
        <aura:set attribute="title">
            <span class="slds-card__header-link">Tracking History ({!v.approvalHistoryList.length})</span>
      
        </aura:set>        
        
        <aura:set attribute="body">
            <c:CALSTA_Request_Approval_Buttons recordId="{!v.recordId}"/>
            <aura:if isTrue="{!$Browser.formFactor != 'DESKTOP'}">
               <aura:if isTrue="{!v.approvalHistoryList.length == 0}">
                <div class="show">        
                </div>
            	</aura:if>
                
                 <aura:if isTrue="{!v.approvalHistoryList.length > 0}">
                
                <p class="slds-p-top_xx-small slds-p-bottom_x-small">{!v.approvalHistoryList.length} items, Sorted By : Is Pending, Date</p>
              <ui:scrollerWrapper class="scrollerSize">
                <div> 
                    <table class="slds-table slds-table_cell-buffer slds-table_bordered newCustomTable">
                        <thead>
                            <tr class="slds-line-height_reset">
                                <th class="" scope="col">
                                    <div class="slds-truncate" title=""></div>
                                </th>
                                <th class="" scope="col">
                                    <div class="slds-truncate" title="Step Name">Step Name</div>
                                </th>
                                <th class="" scope="col">
                                    <div class="slds-truncate" title="Date">Date</div>
                                </th>
                                <th class="" scope="col">
                                    <div class="slds-truncate" title="Status">Status</div>
                                </th>
                                <th class="" scope="col">
                                    <div class="slds-truncate" title="Action Taken By">Action Taken By</div>
                                </th>
                                <th class="" scope="col">
                                    <div class="slds-truncate" title="Assigned To">Assigned To</div>
                                </th>
                                <th class="" scope="col">
                                    <div class="slds-truncate" title="Queue">Queue</div>
                                </th>
                                <th class="" scope="col">
                                    <div class="slds-truncate" title="Tracking Comments">Tracking Comments</div>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <aura:iteration items="{!v.approvalHistoryList}" var="step"  indexVar="index"> 
                                <tr class="slds-hint-parent">
                                    <td data-label="">
                                        <div class="slds-truncate" title="">
                                            {!index+1} 
                                        </div>
                                    </td>  
                                    <td data-label="{!step.createdDate}">
                                        <div class="slds-truncate" title="{!step.InstanceStepId}">
                                            <lightning:button variant="base" name="{!step.InstanceStepId}"  label="{!step.processNode}" title="{!step.processNode}" onclick="{! c.popupModal }"/>
                                        </div>
                                    </td>           
                                    <td data-label="{!step.createdDate}">
                                        <div class="slds-truncate" title="{!step.createdDate}">
                                            <lightning:formattedDateTime value="{!step.createdDate}" year="numeric" month="numeric" day="numeric"  />
                                        </div>
                                    </td>   
                                    <td role="">
                                        <div class="slds-truncate" title="{!step.steps}">{!step.steps}</div>
                                    </td>                                
                                    <td role="">
                                        <div class="slds-truncate" title="{!step.assignedBy}">{!step.assignedBy}</div>
                                    </td>
                                    <td role="">
                                        <div class="slds-truncate" title="{!step.actualApprovar}">{!step.actualApprovar}</div>
                                    </td>
                                    <td role="" >
                                        <div class="slds-truncate" title="{!step.assignedTo}">{!step.assignedTo}</div>
                                    </td>
                                    <td role="">
                                        <div class="slds-cell-wrap" title="{!step.comments}">
                                            {!step.comments}
                                        </div>
                                        
                                    </td>    
                                </tr>
                            </aura:iteration>
                        </tbody>
                    </table>
                </div>
             </ui:scrollerWrapper>
            </aura:if> 
            </aura:if>    
               <aura:if  isTrue="{!and($Browser.formFactor == 'DESKTOP', v.approvalHistoryList.length > 0)}">  
                   
                <p class="slds-p-top_xx-small slds-p-bottom_x-small">{!v.approvalHistoryList.length} items, Sorted By : Is Pending, Date</p>
                <ui:scrollerWrapper class="scrollerSize">
                <div> 
                    <table class="slds-table slds-table_cell-buffer slds-table_bordered newCustomTable">
                        <thead>
                            <tr class="slds-line-height_reset">
                                <th class="" scope="col">
                                    <div class="slds-truncate" title=""></div>
                                </th>
                                <th class="" scope="col">
                                    <div class="slds-truncate" title="Step Name">Step Name</div>
                                </th>
                                <th class="" scope="col">
                                    <div class="slds-truncate" title="Date">Date</div>
                                </th>
                                <th class="" scope="col">
                                    <div class="slds-truncate" title="Status">Status</div>
                                </th>
                                <th class="" scope="col">
                                    <div class="slds-truncate" title="Action Taken By">Action Taken By</div>
                                </th>
                                <th class="" scope="col">
                                    <div class="slds-truncate" title="Assigned To">Assigned To</div>
                                </th>
                                <th class="" scope="col">
                                    <div class="slds-truncate" title="Queue">Queue</div>
                                </th>
                                <th class="" scope="col">
                                    <div class="slds-truncate" title="Tracking Comments">Tracking Comments</div>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <aura:iteration items="{!v.approvalHistoryList}" var="step"  indexVar="index"> 
                                <tr class="slds-hint-parent">
                                    <td data-label="">
                                        <div class="slds-truncate" title="">
                                            {!index+1} 
                                        </div>
                                    </td>  
                                    <td data-label="{!step.createdDate}">
                                        <div class="slds-truncate" title="{!step.InstanceStepId}">
                                            <lightning:button variant="base" name="{!step.InstanceStepId}"  label="{!step.processNode}" title="{!step.processNode}" onclick="{! c.popupModal }"/>
                                        </div>
                                    </td>           
                                    <td data-label="{!step.createdDate}">
                                        <div class="slds-truncate" title="{!step.createdDate}">
                                            <lightning:formattedDateTime value="{!step.createdDate}" year="numeric" month="numeric" day="numeric"  />
                                        </div>
                                    </td>   
                                    <td role="">
                                        <div class="slds-truncate" title="{!step.steps}">{!step.steps}</div>
                                    </td>                                
                                    <td role="">
                                        <div class="slds-truncate" title="{!step.assignedBy}">{!step.assignedBy}</div>
                                    </td>
                                    <td role="">
                                        <div class="slds-truncate" title="{!step.actualApprovar}">{!step.actualApprovar}</div>
                                    </td>
                                    <td role="" >
                                        <div class="slds-truncate" title="{!step.assignedTo}">{!step.assignedTo}</div>
                                    </td>
                                    <td role="">
                                        <div class="slds-cell-wrap" title="">                                            
                                             {!step.comments}
                                        </div>
                                    </td>    
                                </tr>
                            </aura:iteration>
                        </tbody>
                    </table>
                </div>
                    </ui:scrollerWrapper>
                    </aura:if>
        </aura:set>        
    </lightning:card> 
    
   
    
    
    <!-- dialog popup Modal box -->
    <aura:if isTrue="{!v.ispopupModalOpen}">             
        <!-- Modal/Popup Box starts here-->
        <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
            <div class="slds-modal__container">
                <!-- Modal/Popup Box Header Starts here-->
                <header class="slds-modal__header">
                    <lightning:buttonIcon iconName="utility:close"
                                          onclick="{! c.popupcloseModel }"
                                          alternativeText="close"
                                          variant="bare-inverse"
                                          class="slds-modal__close"/>
                    <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate"> Request Approval</h2>
                </header>
                <!--Modal/Popup Box Body Starts here-->
                <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                    <aura:iteration items="{!v.approvalsMapList}" var="cus" indexVar="key">                            
                        <div class="slds-grid slds-wrap">                        
                            <div class="slds-col slds-size_6-of-12">
                                <p>Submitter</p>
                                <p>{!v.showapprovalHistorySubmittedBy}</p><br></br>
                                <p> Assigned To</p>
                                <p>{!cus.value.actualApprovar}</p>
                            </div>
                            <div class="slds-col slds-size_6-of-12">
                                <p>Date Submitted</p>
                                <p>                                    
                                    <lightning:formattedDateTime value="{!cus.value.createdDate}" year="numeric" month="numeric" day="numeric" hour="numeric" minute="2-digit" />
                                </p><br></br>
                                <p class="slds-text-title">Queue</p>
                                <p>{!cus.value.assignedTo}</p>
                            </div>
                        </div>
                    </aura:iteration>
                    
                </div>
                <footer class="slds-modal__footer">
                    <lightning:button variant="brand"
                                      label="Close"
                                      title="Close"
                                      onclick="{! c.popupcloseModel }"/>
                </footer>
                
            </div>
        </section>
        <div class="slds-backdrop slds-backdrop_open"></div>
    </aura:if>
  
</aura:component>