<aura:component controller="CalSTA_Pdf_Generation_Controller" implements="flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickAction" access="global" >
    <aura:attribute name="recordId" type="Id" /> 
    <aura:html tag="style">
        .slds-modal__container {
        min-width: 70vw;
        }
    </aura:html>  
    
    <aura:attribute name="isShowPDF" type="boolean" default="false"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:if isTrue="{!v.isShowPDF}">
        <p>
            This feature is not available for Department users.
        </p>
    </aura:if>
    <aura:if isTrue="{!!v.isShowPDF}">
        <iframe src="{! '/apex/CalSTA_Print_Pdf?Id=' + v.recordId }" width="100%" height="500px" frameBorder="0" />
    </aura:if>
    </aura:component>