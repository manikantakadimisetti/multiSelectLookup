<apex:page renderAs="PDF"  controller="CalSTA_Pdf_Generation_Controller">
    <apex:form > 
                
       <body style="font-family: 'open_sansregular'; margin: 0; padding: 0;font-size: 12px;">           
               <div style="width:100%;display:block;overflow:hidden;">
                   <div style="width:40%;float:left">
                       <p style="padding-bottom:1px;margin:3px 0;">
                           <apex:image url="{!URLFOR($Resource.IMPDF, '/images/CalSTA_logo.jpg')}" width="400px"/> 
                       </p> 
                   </div>
                   <div style="width:60%;float:right">
                       <p style="text-align:right;padding-bottom:1px;margin:3px 0;font-weight:600;">
                           <apex:outputText value="{0, DATE, MMM dd',' yyyy}">        
                               <apex:param value="{!TODAY()}" /> 
                           </apex:outputText>
                       </p>
                   </div>
               </div> 
               <h1 class="main-header" style="margin: 0;padding:5px 0px 10px 80px;font-size: 16px;text-transform:uppercase">TRANSMITTAL OF {!recordTypeName}</h1>
               <div style="width:100%;display:block;overflow:hidden;">  
                   <div style="width:60%;float:left;">
                       <div style="Width:100%;">
                           <table style="width:100%">                                                   
                               <apex:outputPanel rendered="{!isSectionVisible}">
                                   <tr>
                                       <td style="width:45%;text-align:right">
                                           <p style="margin: 4px 0px 4px;font-weight:400;">
                                               Department Sent To <span style="float:right;"> &nbsp;:</span>
                                           </p>
                                       </td>
                                       <td style="width:55%">
                                           <p style="margin: 4px 0px 4px;font-weight:400;"> {!department.Name} </p>
                                       </td>
                                   </tr>       
                                   <tr>
                                       <td style="width:45%;text-align:right">
                                           <p style="margin: 4px 0px 4px;font-weight:400;">
                                               Date CalSTA Received From GO <span style="float:right;"> &nbsp;:</span>
                                           </p>
                                       </td>
                                       <td style="width:55%">
                                           <p style="margin: 4px 0px 4px;font-weight:400;"> 
                                               <apex:outputText value="{0, DATE, MMM dd',' yyyy}">                            
                                                   <apex:param value="{!caseobj.Date_CalSTA_Received_from_GO__c}"/>                            
                                               </apex:outputText>                                      
                                           </p>
                                       </td>
                                   </tr>
                                   <tr>
                                       <td style="width:45%;text-align:right">
                                           <p style="margin: 4px 0px 4px;font-weight:400;">
                                               Date Due To GO <span style="float:right;"> &nbsp;:</span>
                                           </p>
                                       </td>
                                       <td style="width:55%">
                                           <p style="margin: 4px 0px 4px;font-weight:400;"> 
                                               <apex:outputText value="{0, DATE, MMM dd',' yyyy}">                            
                                                   <apex:param value="{!caseobj.Date_Due_to_the_GO__c}"/>                            
                                               </apex:outputText> 
                                           </p>
                                       </td>
                                   </tr>
                                   <tr>
                                       <td style="width:45%;text-align:right">
                                           <p style="margin: 4px 0px 4px;font-weight:400;">
                                               GO Tracking Number <span style="float:right;"> &nbsp;:</span>
                                           </p>
                                       </td>
                                       <td style="width:55%">
                                           <p style="margin: 4px 0px 4px;font-weight:400;"> 
                                               {!caseobj.GO_Tracking_Number__c} 
                                           </p>
                                       </td>
                                   </tr>
                               </apex:outputPanel>
                               <apex:outputLabel rendered="{!!isSectionVisible}">
                                   <tr>
                                       <td style="width:45%;text-align:right">
                                           <p style="margin: 4px 0px 4px;font-weight:400;">
                                               Department Sent To <span style="float:right;"> &nbsp;:</span>
                                           </p>
                                       </td>
                                       <td style="width:55%">
                                           <p style="margin: 4px 0px 4px;font-weight:400;"> {!department.Name} </p>
                                       </td>
                                   </tr>       
                                   <tr>
                                       <td style="width:45%;text-align:right">
                                           <p style="margin: 4px 0px 4px;font-weight:400;">
                                               Date Received by CalSTA <span style="float:right;"> &nbsp;:</span>
                                           </p>
                                       </td>
                                       <td style="width:55%">
                                           <p style="margin: 4px 0px 4px;font-weight:400;">                                             
                                               <apex:outputText value="{0, DATE, MMM dd',' yyyy}">                            
                                                   <apex:param value="{!caseobj.Date_Received_by_CalSTA__c}"/>                            
                                               </apex:outputText>
                                           </p>                                       
                                       </td>
                                   </tr> 
                               </apex:outputLabel>
                           </table>
                       </div>                  
                   </div>
                   <div style="width:38%;float:left; #000;padding-top:10px;padding-bottom:10px">
                       <div style="border:0.5px solid #000;padding-left:2px;width:100%;float:left;"> 
                           <div style="Width:100%;">
                               <table style="width:100%">
                                   <tr>
                                       <td style="width:60%;text-align:right">
                                           <p style="margin: 4px 0px 4px;font-weight:400;">
                                               CalSTA Tracking Number <span style="float:right;"> &nbsp;:</span>
                                           </p>
                                       </td>
                                       <td style="width:40%">
                                           <p style="margin: 4px 0px 4px;font-weight:400;">
                                               {!caseobj.Tracking_Number__c}
                                               
                                           </p>
                                       </td>
                                   </tr>
                                   <tr>
                                       <td style="width:60%;text-align:right">
                                           <p style="margin: 4px 0px 4px;font-weight:400;">
                                               Date Due To CalSTA <span style="float:right;"> &nbsp;:</span>
                                           </p>
                                       </td>
                                       <td style="width:40%">
                                           <p style="margin: 4px 0px 4px;font-weight:400;">                                            
                                               <apex:outputText value="{0, DATE, MMM dd',' yyyy}">                            
                                                   <apex:param value="{!caseobj.Date_Due_to_CALSTA__c}"/>                            
                                               </apex:outputText> 
                                           </p>
                                       </td>
                                   </tr>
                                   <tr>
                                       <td style="width:60%;text-align:right">
                                           <p style="margin: 4px 0px 4px;font-weight:400;">
                                               Date Completed <span style="float:right;"> &nbsp;:</span>
                                           </p>
                                       </td>
                                       <td style="width:40%">
                                           <p style="margin: 4px 0px 4px;font-weight:400;">                                            
                                               <apex:outputText value="{0, DATE, MMM dd',' yyyy}">                            
                                                   <apex:param value="{!caseobj.Date_Completed__c}"/>                            
                                               </apex:outputText>
                                           </p>
                                       </td>
                                   </tr>
                                   <tr>
                                       <td style="width:60%;text-align:right">
                                           <p style="margin: 4px 0px 4px;font-weight:400;">
                                               Number of Days Overdue <span style="float:right;">&nbsp; :</span>
                                           </p>
                                       </td>
                                       <td style="width:40%">
                                           <p style="margin: 4px 0px 4px;font-weight:400;">                                            
                                               {!caseobj.Number_of_Days_Overdue__c  }
                                           </p>
                                       </td>
                                   </tr>
                                   <tr>
                                       <td style="width:60%;text-align:right">
                                           <p style="margin: 4px 0px 4px;font-weight:400;">
                                               Status <span style="float:right;"> &nbsp; :</span>
                                           </p>
                                       </td>
                                       <td style="width:40%">
                                           <p style="margin: 4px 0px 4px;font-weight:400;">                                            
                                               {!caseobj.Status  }
                                           </p>
                                       </td>
                                   </tr>
                               </table>
                           </div>                        
                       </div>
                   </div>                
               </div>           
               <div style="width:100%;border-top:0.5px solid #000;padding:10px 0px;overflow:hidden">
                   <table style="width:100%">
                       <tr>
                           <td style="width:42%;text-align:right">
                               <p style="margin: 4px 0px 4px;font-weight:400;">
                                   Name of Correspondent <span style="float:right;"> &nbsp;:</span>
                               </p>
                           </td>
                           <td style="width:58%">
                               <p style="margin: 4px 0px 4px;font-weight:400;"> {!caseobj.Constituent_Name__c} </p>
                           </td>
                       </tr>
                       <tr>
                           <td style="width:42%;text-align:right">
                               <p style="margin: 4px 0px 4px;font-weight:400;">
                                   Address <span style="float:right;"> &nbsp;:</span>
                               </p>
                           </td>
                           <td style="width:58%">
                               <p style="margin: 4px 0px 4px;font-weight:400;"> {!caseobj.Constituent_Address__c} </p>
                           </td>
                       </tr>                   
                       <tr>
                           <td style="width:42%;text-align:right">
                               <p style="margin: 4px 0px 4px;font-weight:400;">
                                   Phone Number <span style="float:right;"> &nbsp;:</span>
                               </p>
                           </td>
                           <td style="width:58%">
                               <p style="margin: 4px 0px 4px;font-weight:400;"> {!caseobj.Constituent_Phone__c} </p>
                           </td>
                       </tr>
                       <tr>
                           <td style="width:42%;text-align:right">
                               <p style="margin: 4px 0px 4px;font-weight:400;">
                                   Email Address <span style="float:right;"> &nbsp;:</span>
                               </p>
                           </td>
                           <td style="width:58%">
                               <p style="margin: 4px 0px 4px;font-weight:400;"> {!caseobj.Constituent_Email__c} </p>
                           </td>
                       </tr>                   
                       <tr>
                           <td style="width:42%;text-align:right">
                               <p style="margin: 4px 0px 4px;font-weight:400;">
                                   Date of Correspondence/ Phone Call <span style="float:right;"> &nbsp;:</span>
                               </p>
                           </td>
                           <td style="width:58%">
                               <p style="margin: 4px 0px 4px;font-weight:400;"> 
                                   <apex:outputText value="{0, DATE, MMM dd',' yyyy}">                            
                                       <apex:param value="{!caseobj.Date_of_Correspondence__c}"/>                            
                                   </apex:outputText> / {!caseobj.Constituent_Phone__c}
                               </p>
                           </td>
                       </tr>
                       <tr>
                           <td style="width:42%;text-align:right">
                               <p style="margin: 4px 0px 4px;font-weight:400;">
                                   CalSTA Staff Transmitting Constituent Concern  <span style="float:right;"> &nbsp;:</span>
                               </p>
                           </td>
                           <td style="width:58%">
                               <p style="margin: 4px 0px 4px;font-weight:400;">  {!caseobj.CreatedBy.Name} </p>
                           </td>
                       </tr>
                       <tr>
                           <td style="width:42%;text-align:right;vertical-align: middle;">
                               <p style="margin: 4px 0px 4px;font-weight:400;">
                                   Date of Transmittal  <span style="float:right;"> &nbsp;:</span>
                               </p>
                           </td>
                           <td style="width:58%;vertical-align: middle;">
                               <p style="margin: 4px 0px 4px;font-weight:400;">
                                   <apex:outputText value="{0, DATE, MMM dd',' yyyy}">                            
                                       <apex:param value="{!caseobj.Date_of_Transmittal__c}"/>                            
                                   </apex:outputText> 
                                   <span style="float:right;">Submitted Duplicate Correspondence:                                    
                                       <apex:outputPanel rendered="{!caseobj.Submitted_Duplicate_Correspondence__c}">                       
                                           <apex:image url="{!URLFOR($Resource.checkboxtrue)}" width="14px" />
                                       </apex:outputPanel>
                                       <apex:outputPanel rendered="{!!caseobj.Submitted_Duplicate_Correspondence__c}">                       
                                           <apex:image url="{!URLFOR($Resource.checkboxfalse)}" width="14px"/>
                                       </apex:outputPanel>
                                   </span>
                               </p>
                           </td>
                       </tr>
                   </table>          
                   <p style="padding-bottom:10px;margin:3px 0;">
                       lssue(s) : {!caseobj.Subject}
                   </p>
               </div>
               <div style="width:100%;border-top:0.5px solid #000;padding:10px 0px;overflow:hidden">
                   <p style="padding-bottom:10px;margin:3px 0;;font-size:14px;">
                       Instructions to Department: 
                   </p>
                   
                   <apex:repeat value="{!instructionPickListValuesList}" var="instructPickListValues">    
                       <p style="padding-bottom:1px;margin:3px 0;">      
                           <apex:outputPanel rendered="{!instructionPickListValuesList[instructPickListValues]}">
                               <img src="{!$Resource.checkboxtrue}" width="2%"/>
                           </apex:outputPanel>
                           <apex:outputPanel rendered="{!!instructionPickListValuesList[instructPickListValues]}">
                               <img src="{!$Resource.checkboxfalse}" width="2%"/>
                           </apex:outputPanel>                    
                           &nbsp; <apex:outputText value="{!instructPickListValues}" /> 
                       </p>
                   </apex:repeat>
               </div> 
        </body>
    </apex:form>
</apex:page>